<UserControl x:Class="psdPH.TemplateEditor.CompositionLeafEditor.Windows.CEDStackUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:psdPH.TemplateEditor.CompositionLeafEditor.Windows"
             mc:Ignorable="d" Width="320" Height="460" Loaded="UserControl_Loaded">
    <Grid>
        <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
            <ScrollViewer Margin="0,62,0,0">
                <StackPanel x:Name="stackPanel"/>
            </ScrollViewer>
            <Button x:Name="addButton" Content="+" HorizontalAlignment="Left" Height="24" Margin="10,21,0,0" VerticalAlignment="Top" Width="27" Click="Button_Click">
                <Button.ContextMenu>
                    <ContextMenu x:Name="CreateDropdownMenu" >
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Grid>
    </Grid>
</UserControl>
