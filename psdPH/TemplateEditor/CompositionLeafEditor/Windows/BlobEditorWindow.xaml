<Window  x:Class="psdPH.BlobEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:psdPH"
        mc:Ignorable="d"
        Title="TemplateEditor" Height="450" Width="365" Closed="Window_Closed" Activated="Window_Activated"
        >
    <Grid>

        <TabControl Margin="0,0,0,0">
            <TabItem Header="Структура">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <ScrollViewer Margin="0,62,0,0">
                        <StackPanel x:Name="structuresStackPanel"/>
                    </ScrollViewer>
                    <Button Content="+" HorizontalAlignment="Left" Height="24" Margin="10,21,0,0" VerticalAlignment="Top" Width="27" Click="Button_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="DropdownMenu" >
                                <MenuItem x:Name="addFlagItem" Header="Флаг"/>
                                <MenuItem x:Name="addTphItem" Header="Текстовое поле" />
                                <MenuItem x:Name="addImageItem" Header="Поле изображения" />
                                <MenuItem x:Name="addVisItem" Header="Видимость слоя" />
                                <MenuItem x:Name="addBlob" Header="Поддокумент" />
                                <MenuItem x:Name="addPhItem" Header="Плейсхолдер" />
                                <MenuItem x:Name="addProtoItem" Header="Прототип" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Правила" Height="22" Margin="-2,-2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="58">
                <Grid Background="#FFE5E5E5">
                    <Button Content="+" HorizontalAlignment="Left" Height="24" Margin="10,21,0,0" VerticalAlignment="Top" Width="27" Click="Button_Click_1"/>
                    <ScrollViewer Margin="0,62,0,0">
                        <StackPanel x:Name="rulesStackPanel">
                            <TextBlock TextWrapping="Wrap"><Run Text="fsafasfsafaaaaaaaaa aaafffffffffffffffffffffffffff "/><LineBreak/><Run Text="ffffffffffffff fffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffsfas"/></TextBlock>
                            <Button Content="Button"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
