<Window  x:Class="psdPH.BlobEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:psdPH"
        mc:Ignorable="d"
        Title="TemplateEditor" Height="450" Width="800"
        >
    <Grid>

        <TabControl>
            <TabItem Header="Структура">
                <Grid Background="#FFE5E5E5">
                    <StackPanel x:Name="stackPanel" HorizontalAlignment="Left" Height="248" Margin="10,50,0,0" VerticalAlignment="Top" Width="335">
                        <StackPanel.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="#FF985555" Offset="1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                    </StackPanel>
                    <Button Content="+" HorizontalAlignment="Left" Height="24" Margin="10,21,0,0" VerticalAlignment="Top" Width="27" Click="Button_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="DropdownMenu" >
                                <MenuItem x:Name="addFlagItem" Header="Флаг" Command=""/>
                                <MenuItem x:Name="addTphItem" Header="Текстовое поле" />
                                <MenuItem x:Name="addImageItem" Header="Поле изображения" />
                                <MenuItem x:Name="addVisItem" Header="Видимость слоя" />
                                <MenuItem x:Name="addSub" Header="Поддокумент" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
