<!-- MultiPicker.xaml -->
<UserControl x:Class="YourNamespace.MultiPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal" Background="#FFFFEBEB">
        <StackPanel>
            <Label Content="Исходные"/>
            <ListBox x:Name="listbox1" Width="150" Height="300" MouseDoubleClick="ListBox1_MouseDoubleClick"/>
        </StackPanel>
        <StackPanel>
            <Label Content="Выбранные"/>
            <ListBox x:Name="listbox2" Width="150" Height="300" MouseDoubleClick="ListBox2_MouseDoubleClick"/>
    </StackPanel>
    </StackPanel>
</UserControl>
