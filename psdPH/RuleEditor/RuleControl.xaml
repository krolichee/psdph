<UserControl x:Class="psdPH.Logic.RuleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:psdPH.Logic"
             mc:Ignorable="d" 
             d:DesignHeight="450" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid Background="#FFF7E4E4">

        <StackPanel x:Name="stackPanel" Orientation="Horizontal" >
            <Label Content="Если" RenderTransformOrigin="-0.716,-2.504" VerticalAlignment="Center"/>
            <ComboBox x:Name="conditionsComboBox" Width="150" Height="25" VerticalAlignment="Center" SelectionChanged="conditionsComboBox_SelectionChanged"/>
            <StackPanel x:Name="conditionParametersStack" Orientation="Horizontal"></StackPanel>
            <Label x:Name="thenLabel" VerticalAlignment="Center" Content="то"></Label>
            <ComboBox x:Name="ruleComboBox" Height="25" VerticalAlignment="Center" SelectionChanged="ruleComboBox_SelectionChanged"/>
            <StackPanel x:Name="ruleParametersStack" Orientation="Horizontal" ></StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
