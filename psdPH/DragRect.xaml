<UserControl x:Class="psdPH.DragRect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:psdPH"
             mc:Ignorable="d" Width="20" Height="30">

    <Rectangle Width="20"  Height="20" >
        <Rectangle.Fill>
            <VisualBrush Viewport="3,3,6,6" ViewportUnits="Absolute" TileMode="Tile" Viewbox="0,0,3,3">
                <VisualBrush.Visual>
                    <Canvas Width="15" Height="15">
                        <Ellipse Width="5" Height="5" Fill="#FF87888A" 
                     Canvas.Left="5" Canvas.Top="6" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Canvas>
                </VisualBrush.Visual>
            </VisualBrush>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
