<UserControl x:Class="psdPH.AlignmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:psdPH"
             mc:Ignorable="d" Height="90" Width="90">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" x:Name="upLeft"  ToolTip="asda"/>
        <Button Grid.Column="1" Grid.Row="0" x:Name="upCenter"/>
        <Button Grid.Column="2" Grid.Row="0" x:Name="upRight"/>
        <Button Grid.Column="0" Grid.Row="1" x:Name="centerLeft"/>
        <Button Grid.Column="1" Grid.Row="1" x:Name="centerCenter"/>
        <Button Grid.Column="2" Grid.Row="1" x:Name="centerRight"/>
        <Button Grid.Column="0" Grid.Row="2" x:Name="downLeft"/>
        <Button Grid.Column="1" Grid.Row="2" x:Name="downCenter"/>
        <Button Grid.Column="2" Grid.Row="2" x:Name="downRight" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
    </Grid>
</UserControl>
