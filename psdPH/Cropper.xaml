<Window x:Class="psdPH.Cropper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:psdPH"
        mc:Ignorable="d"
        Title="Cropper" Height="450" Width="800">
    <Grid>
        <Slider HorizontalAlignment="Left" Margin="148,199,0,0" VerticalAlignment="Top" Width="120" ValueChanged="Slider_ValueChanged">
            <Slider.Effect>
                <BlurEffect x:Name="blurEffect" Radius="10" />
            </Slider.Effect>
        </Slider>

    </Grid>
</Window>
