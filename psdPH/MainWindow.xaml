<Window x:Class="psdPH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:psdPH"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="270" Closed="Window_Closed">
    <Grid x:Name="MainGrid" Margin="0,0,0,-6">
        <Menu VerticalAlignment="Top">
            <!-- Пункт меню "Файл" -->
            <MenuItem Header="Проект" Click="MenuItem_Click" >
                <!-- Подменю -->
                <MenuItem Header="Новый" Click="NewProjectMenuItem_Click" />
                <MenuItem Header="Открыть" x:Name="openMenuItem" />
                <MenuItem  Header="Закрыть" x:Name="closeProjectMenuItem"/>
                <Separator/>
                <MenuItem x:Name="templateMenuItem" Header="Редактировать шаблон" />
                <Separator/>
                <MenuItem x:Name="weekkViewMenuItem" Header="Недельный вид" />
            </MenuItem>
        </Menu>
        <Label Content="Текущий проект:" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" FontSize="8"/>
        <TextBlock x:Name="projectNameTextBlock" HorizontalAlignment="Center" Margin="0,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="86" Width="271" TextAlignment="Center" FontFamily="Arial Black" Foreground="#FFB1B1B1"/>
    </Grid>
</Window>
