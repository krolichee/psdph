<Window x:Class="psdPH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:psdPH"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="656,31,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Menu VerticalAlignment="Top">
            <!-- Пункт меню "Файл" -->
            <MenuItem Header="Проект" >
                <!-- Подменю -->
                <MenuItem Header="Новый" Click="NewProjectMenuItem_Click" />
                <MenuItem x:Name="openMenuItem" Header="Открыть" Click="openMenuItem_Click" />
                <Separator/>
                <MenuItem x:Name="templateMenuItem" Header="Редактировать шаблон" Click="templateMenuItem_Click" />
                <MenuItem x:Name="weekkViewMenuItem" Header="Недельный вид" Click="weekkViewMenuItem_Click" />
            </MenuItem>

            <!-- Пункт меню "Правка" -->
            <MenuItem Header="Правка">
                <MenuItem Header="Вырезать" />
                <MenuItem Header="Копировать" />
                <MenuItem Header="Вставить" />
            </MenuItem>

            <!-- Пункт меню "Справка" -->
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
