<Window x:Class="psdPH.StringInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:psdPH"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="StringInputWindow" Height="80" Width="330" WindowStyle="ToolWindow">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="65" Width="330">
        <TextBox x:Name="tb" HorizontalAlignment="Left" Height="28" Margin="10,6,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="210"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="235,6,0,31" Width="70" Click="Button_Click"/>

    </Grid>
</Window>
